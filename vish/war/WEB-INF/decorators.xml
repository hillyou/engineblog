        <pattern>/article/user/*</pattern>
        <pattern>/user/setting/*</pattern>
        <pattern>/admin/*</pattern>
    </decorator>

    <decorator name="frontend" page="frontend.jsp">
        <pattern>/*</pattern>
    </decorator>
    
    
